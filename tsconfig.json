{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "target": "es2016"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.hbs"]
}
