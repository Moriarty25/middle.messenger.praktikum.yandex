<div class="profile">
  <div class="profile__back">
    {{{buttonBack}}}
  </div>
  <main class="profile__wrapper">
    {{{userAvatar}}}
    <div class="profile__user-name">{{{first_name}}}</div>
    {{#if changeUserPassword}}
      <form class="profile__content">
        <div class="profile__item">
          <p>Старый пароль</p>
          {{{oldPasswordInput}}}
        </div>
        <div class="profile__item">
          <p>Новый пароль</p>
          {{{newPasswordInput}}}
        </div>
        <div class="profile__item">
          <p>Повторите новый пароль</p>
          {{{newPasswordAgainInput}}}
        </div>
        <div class="profile__footer profile__footer--btn">
          {{{primary}}}
        </div>
      </form>
    {{/if}}

    {{#if changeUserData}}
      <form class="profile__content">
        <div class="profile__item">
          <p>Почта</p>
          {{{emailInpit}}}
          {{!-- <p class="error-message">{{{error}}}</p> --}}
        </div>
        <div class="profile__item">
          <p>Логин</p>
          {{{loginInpit}}}
        </div>
        <div class="profile__item">
          <p>Имя</p>
          {{{firstNameInpit}}}
        </div>
        <div class="profile__item">
          <p>Фамилия</p>
          {{{secondNameInpit}}}
        </div>
        <div class="profile__item">
          <p>Имя в чате</p>
          {{{displayNameInpit}}}
        </div>
        <div class="profile__item">
          <p>Телефон</p>
          {{{phoneInpit}}}
        </div>
        <div class="profile__footer profile__footer--btn">
          {{{primary}}}
        </div>
      </form>
    {{/if}}
    {{#if profilePage}}
      <div class="profile__content">
        <div class="profile__item">
          <p>Почта</p>
          <p class="profile__item--gray">{{{email}}}</p>
        </div>
        <div class="profile__item">
          <p>Логин</p>
          <p class="profile__item--gray">{{{login}}}</p>
        </div>
        <div class="profile__item">
          <p>Имя</p>
          <p class="profile__item--gray">{{{first_name}}}</p>
        </div>
        <div class="profile__item">
          <p>Фамилия</p>
          <p class="profile__item--gray">{{{second_name}}}</p>
        </div>
        <div class="profile__item">
          <p>Имя в чате</p>
          <p class="profile__item--gray">{{{display_name}}}</p>
        </div>
        <div class="profile__item">
          <p>Телефон</p>
          <p class="profile__item--gray">{{{phone}}}</p>
        </div>
      </div>
      <div class="profile__footer">
        <div>
          <div class="profile__item profile__item--btn">{{{changeData}}}</div>
        </div>
        <div>
          <div class="profile__item profile__item--btn">{{{changePassword}}}</div>
        </div>
        <div>
          <div class="profile__item profile__item--btn">{{{exit}}}</div>
        </div>
      </div>
    {{/if}}
  </main>
</div>
