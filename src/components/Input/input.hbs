  {{#if isMessage}}
  <input type="text" name="message" class="input__message" placeholder="Сообщение" autocomplete="off"/>
  {{else}}
  <input
    class="field__input {{#if invalid }}{{#if passwordInvalid}}field__input--invalid{{/if}}{{/if}} "
    type="{{{inputType}}}"
    name="{{{inputName}}}"
    placeholder="{{{inputPlaceholder}}}" 
    maxlength="50"
    value="{{{value}}}"
    required
  />
{{/if}}
